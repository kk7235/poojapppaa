<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/poojaimage"
    android:padding="5dp"
    android:layout_gravity="center"
>
    <TextView
        android:text="Select Item For Pooja"
        android:gravity="center"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:layout_marginBottom="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

 <LinearLayout
     android:layout_width="match_parent"
     android:orientation="horizontal"
     android:weightSum="2"
     android:layout_height="wrap_content">

     <Button
         android:layout_width="0dp"
         android:layout_margin="20dp"
         android:id="@+id/bpen"
         android:background="@drawable/penicon"
         android:layout_weight="1"
         android:layout_height="80dp"></Button>
     <Button
         android:layout_width="0dp"
         android:layout_margin="20dp"
         android:id="@+id/blap"
         android:background="@drawable/iconlap"
         android:layout_weight="1"
         android:layout_height="80dp"></Button>
 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_margin="20dp"
            android:background="@drawable/iconcam"
            android:layout_weight="1"
            android:id="@+id/bcamera"
            android:layout_height="80dp"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_margin="20dp"
            android:background="@drawable/iconguitar"
            android:layout_weight="1"
            android:id="@+id/bguitar"
            android:layout_height="80dp"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_margin="20dp"
            android:background="@drawable/icondumbel"
            android:layout_weight="1"
            android:id="@+id/bdumbel"
            android:layout_height="80dp"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_margin="20dp"
            android:id="@+id/bcar"
            android:background="@drawable/caricon"
            android:layout_weight="1"
            android:layout_height="80dp"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_margin="20dp"
            android:background="@drawable/caricon"
            android:layout_weight="1"
            android:layout_height="80dp"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_margin="20dp"
            android:background="@drawable/caricon"
            android:layout_weight="1"
            android:layout_height="80dp"></Button>
    </LinearLayout>
</LinearLayout>
